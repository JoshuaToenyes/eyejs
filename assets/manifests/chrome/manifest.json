{
  "manifest_version": 2,
  "name": "Eyelluminati",
  "description": "Enable eye interactivity for the web.",
  "version": "1.0",
  "permissions": ["tabs", "http://localhost/"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["eye.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "eye-16.png",
    "48": "eye-48.png",
    "128": "eye-128.png" },
  "browser_action": {
    "default_icon": "eye-128.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": ["eye.js"],
  "content_security_policy": "script-src 'self' http://localhost:3000; object-src 'self'"
}
